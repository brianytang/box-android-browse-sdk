<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.box.androidsdk.sample" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SampleBrowseActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.box.androidsdk.content.auth.OAuthActivity"
            android:label="BrowseTest" >
        </activity>

        <activity
            android:name="com.box.androidsdk.browse.activities.BoxBrowseFileActivity2"
            android:label="BrowseTest" >
        </activity>

        <activity
            android:name="com.box.androidsdk.browse.activities.BoxBrowseFolderActivity2"
            android:label="BrowseTest" >
        </activity>
    </application>

</manifest>
