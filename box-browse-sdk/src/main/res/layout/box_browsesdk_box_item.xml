<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/box_browsesdk_thumb_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/box_browsesdk_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/box_browsesdk_thumb_image" />
    <TextView
        android:id="@+id/box_browsesdk_size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/box_browsesdk_thumb_image"
        android:layout_below="@+id/box_browsesdk_name_text" />
    <TextView
        android:id="@+id/box_browsesdk_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/box_browsesdk_thumb_image"
        android:layout_below="@+id/box_browsesdk_size_text" />
</RelativeLayout>